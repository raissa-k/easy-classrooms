<%- include('partials/header', {navbar: "no", title: "Log in"}) -%>

<div class="-mt-16 card mx-auto flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
	<h1 class="text-5xl pt-6 text-center font-bold font-sans">Log <span class="text-primary">in</span></h1>
<form action="/login" method="POST" class="">
	<div class="card-body pb-2">
	  	<div class="form-control w-full max-w-xs gap-4">
		<label class="label flex flex-col items-start gap-2">
			Email address
			<input type="email" name="email" id="email" autocomplete="email" required 
			class="input input-bordered w-full max-w-xs">
		</label>

		<label class="label flex flex-col items-start gap-2">
			Password
			<input type="password" name="password" autocomplete="current-password" required class="input input-bordered w-full max-w-xs"/>
		</label>

		<button type="submit" class="btn btn-primary relative w-full flex my-4 justify-center px-4 border border-transparent text-sm font-medium rounded-md transition">
			<span class="absolute left-0 inset-y-0 flex items-center pl-3">
			<!-- Heroicon name: solid/lock-closed -->
			<svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
			<path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
			</svg>
			</span>
			Sign in
		</button>
	  	</div>
	</div>

		<div class="flex items-start flex-col mb-12 px-6 md:px-9 pt-4 text-sm">
			<p class="">Don't have an account? <a href="/signup" class="font-medium underline underline-offset-4">Sign up.</a></p>
			<a class="block underline underline-offset-4 text-sm text-zinc-500 dark:text-zinc-400 hover:text-teal-500 dark:hover:text-teal-500" href="/">Go to main page</a>
		</div>
	</form>
</div>
<%- include('partials/footer') -%>
